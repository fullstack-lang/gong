{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "00 - go install gongc",
            "type": "shell",
            "options": {
                "cwd": "go/gongc"
            },
            "command": "go",
            "args": [
                "install",
            ],
            "group": "build"
        },
        {
            "label": "00 - go install gong",
            "type": "shell",
            "options": {
                "cwd": "."
            },
            "command": "go",
            "args": [
                "install",
            ],
            "group": "build"
        },
        {
            "label": "04 - go run test",
            "type": "shell",
            "command": "cd test; go run main.go",
            "group": "build"
        },
        {
            "label": "04 - go run gong",
            "type": "shell",
            "command": "go run main.go",
            "group": "build"
        },
        {
            "label": "04 - go run test2",
            "type": "shell",
            "command": "cd test2; go run main.go",
            "group": "build"
        },
        {
            "label": "03 - ng serve test",
            "type": "shell",
            "options": {
                "cwd": "test/ng"
            },
            "command": "ng serve",
            "group": "build"
        },
        {
            "label": "03 - ng serve test2",
            "type": "shell",
            "options": {
                "cwd": "test2/ng"
            },
            "command": "ng serve",
            "group": "build"
        },
        {
            "label": "01 - gongc test backendOnly",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/test/go/models"
            },
            "command": "gongc",
            "group": "build",
            "args": [
                "-backendOnly"
            ]
        },
        {
            "label": "01 - gongc test",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/test/go/models"
            },
            "command": "gongc",
            "group": "build",
            "args": []
        },
        {
            "label": "01 - gongc test2",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/test2/go/models"
            },
            "command": "gongc",
            "group": "build",
            "args": []
        },
        {
            "label": "01 - gongc gong",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/go/models"
            },
            "command": "gongc",
            "group": "build",
            "args": []
        },
        {
            // you can check in go.mod, the timestamp is UTC
            "label": "00 go mod tidy",
            "type": "shell",
            "group": "build",
            "command": "go mod tidy"
        },
        {
            "label": "Sequence - gongc all",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/.."
            },
            "group": "build",
            "command": "find . -type d -name vendor -prune -o -name gong.go -print -execdir gongc \\;"
        },
        {
            "label": "Sequence - gongc all -backendOnly",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/.."
            },
            "group": "build",
            "command": "find . -type d -name vendor -prune -o -name gong.go -print -execdir gongc -backendOnly\\;"
        },
    ]
}