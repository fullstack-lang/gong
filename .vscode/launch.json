    "version": "0.2.0",
    "configurations": [
        {
            "name": "gongc landromat",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/../laundromat/go/models",
            "program": "${workspaceFolder}/go/gongc",
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 3000,
                "maxArrayValues": 64,
                "maxStructFields": -1
            },
            "args": []
        },
        {
            "name": "gongc test",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/test/go/models",
            "program": "${workspaceFolder}/go/gongc",
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 3000,
                "maxArrayValues": 64,
                "maxStructFields": -1
            },
            "args": []
        },
        {
            "name": "go server test",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/test",
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 3000,
                "maxArrayValues": 64,
                "maxStructFields": -1
            },
            "args": []
        },
        {
            "name": "Attach chrome (windows)",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "runtimeExecutable": "${env:CHROME_EXE}",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/test/ng"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/test/ng"
        },
        {
            "name": "go test BclassOrder",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/test/go/tests",
            "dlvLoadConfig": {
                "followPointers": true,
                "maxVariableRecurse": 1,
                "maxStringLen": 300,
                "maxArrayValues": 64,
                "maxStructFields": -1
            },
            "args": [
                "-test.run",
                "BclassOrder"
            ]
        },
        {
            "name": "go test TestBackup",
            "type": "go",
            "request": "launch",
